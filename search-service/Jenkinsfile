pipeline{
	agent any
	environment {
		SERVICE_NAME = 'search-service'
		IMAGE_TAG = '${env.BUILD_NUMBER}'
	}
	stages{
		stage('Checkout SCM') {
			steps {
				script {
					def gitUrl = scm.getUserRemoteConfigs()[0].getUrl()
					def gitBranch = scm.getBranches()[0].getName()
					echo "Git URL: ${gitUrl}"
					echo "Git Branch: ${gitBranch}"
					git url: gitUrl, branch: gitBranch, credentialsId: 'github-pat'
				}
			}
		}

		stage('Build service') {
			steps {
				echo "Building the service..."
				sh 'mvn clean package -DskipTests'
			}
		}

		stage('Test service') {
			steps {
				echo "Running tests..."
				sh 'mvn test'
			}
		}

		stage('Dockerize service') {
			steps {
				script {
					def serviceName = env.APP_NAME
            		def buildTag = '${serviceName}-${env.BUILD_NUMBER}'

            		sh 'docker build -t search-service-${IMAGE_TAG} search-service'
            		sh 'minikube image load ${buildTag}'
				}
			}
		}
	}

	post{
		success{
			echo "Pipeline completed successfully!"
		}
		failure{
			echo "Pipeline failed. Please check the logs for details."
		}
	}
}