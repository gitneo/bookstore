pipeline{
	agent any
	environment {
		GIT_REPO = 'https://github.com/gitneo/bookstore.git'
		SERVICE_NAME = 'search-service'
	}
	stages{
		stage('Checkout Repository') {
			steps {
				echo "Checking out the repository..."
				git url: 'https://github.com/gitneo/bookstore.git', branch: '${env.BRANCH_NAME}', credentialsId: 'bookstore-git-pat'
			}
		}

		stage('Build service') {
			steps {
				echo "Building the service..."
				sh 'mvn clean package -DskipTests'
			}
		}

		stage('Test service') {
			steps {
				echo "Running tests..."
				sh 'mvn test'
			}
		}

		stage('Deploy service') {
			steps {
				sh 'docker build -t ${APP_NAME}:${IMAGE_TAG} search-service'
			}
		}

		stage('Expose docker image to Kubernetes') {
			steps {
				sh 'minikube image load ${SERVICE_NAME}::${env.BRANCH_NAME}:lane-${env.BUILD_NUMBER}'

			}
		}
	}

	post{
		success{
			echo "Pipeline completed successfully!"
		}
		failure{
			echo "Pipeline failed. Please check the logs for details."
		}
	}
}